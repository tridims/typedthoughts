---
import BaseHead from "@/components/BaseHead.astro";
import Content from "../components/Content.astro";
import "../styles/global.css";
import Header from "../components/Header.astro";
import { Button } from "@/components/ui/button";
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title="About Me!" description="About me description" />
    </head>
    <body>
        <Header title="About me!" />
        <main class="container mx-auto pt-[56px]">
            <Content>
                <div
                    class="bg-gray-700 bg-opacity-50 text-center py-3 rounded-lg mb-16 mt-6 text-gray-300"
                >
                    Hello :V !
                </div>

                <section
                    class="flex flex-col md:flex-row items-center justify-between mb-20"
                >
                    <div class="text-center md:text-left md:mr-10 mb-8 md:mb-0">
                        <h1 class="text-5xl font-bold mb-2">
                            Takuya Matsuyama
                        </h1>
                        <p class="text-xl text-gray-400">
                            Digital Craftsman ( Artist / Developer / Designer )
                        </p>
                    </div>
                    <div class="flex-shrink-0">
                        <img
                            src="/images/firebase.png"
                            alt="Takuya Matsuyama"
                            class="rounded-full w-48 h-48 object-cover shadow-lg"
                        />
                    </div>
                </section>

                <section class="mb-20 text-justify">
                    <h2 class="text-3xl font-bold mb-6">Work</h2>
                    <p
                        class="text-lg leading-relaxed dark:text-gray-300 text-gray-800 mb-8"
                    >
                        Takuya is a freelance and a full-stack developer based
                        in Osaka with a passion for building digital
                        services/stuff he wants. He has a knack for all things
                        launching products, from planning and designing all the
                        way to solving real-life problems with code. When not
                        on-line, he loves hanging out with his camera.
                        Currently, he is living off of his own product called <a
                            href="#"
                            class="highlight-text underline">Inkdrop</a
                        >. He publishes content for market-ing his products and
                        his YouTube channel called <a
                            href="#"
                            class="highlight-text underline">"Dev as Life"</a
                        > has more than 100k subscribers.
                    </p>
                    <div class="flex justify-center">
                        <Button variant="default" className="mx-auto"
                            ><a href="#"
                                >Contact Me! <span class="ml-2">&gt;</span></a
                            ></Button
                        >
                    </div>
                </section>

                <section class="mb-20">
                    <h2 class="text-3xl font-bold mb-6">Bio</h2>
                    <div class="space-y-4 text-gray-300">
                        <p class="pl-14 -indent-14">
                            <span class="font-semibold text-gray-100 mr-4"
                                >1984</span
                            > Born in Osaka (大阪), Japan.
                        </p>
                        <p class="pl-14 -indent-14">
                            <span class="font-semibold text-gray-100 mr-4"
                                >2010</span
                            > Completed the Master's Program in the Graduate School
                            of Information Science at Nara Institute of Science and
                            Technology (奈良先端科学技術大学院大学情報科学研究科修士課程)
                        </p>
                        <p class="pl-14 -indent-14">
                            <span class="font-semibold text-gray-100 mr-4"
                                >2010</span
                            > Worked at Yahoo! Japan (ヤフー株式会社入社)
                        </p>
                        <p class="pl-14 -indent-14">
                            <span class="mr-4 font-semibold text-gray-100"
                                >2012 to present</span
                            > Working as a freelancer
                        </p>
                    </div>
                </section>

                <section>
                    <h2 class="text-3xl font-bold mb-6">I ❤️</h2>
                    <p class="text-lg text-gray-300">
                        Art, Music, <span class="highlight-text">Drawing</span>,
                        Playing Drums, <span class="highlight-text"
                            >Photography</span
                        >, Leica, Machine Learning
                    </p>
                </section>
            </Content>
        </main>
    </body>
</html>
