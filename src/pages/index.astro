---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
import Masthead from "@/components/Masthead.astro";
import Content from "@/components/Content.astro";
import FormattedDate from "@/components/FormattedDate.astro";
import { Image } from "astro:assets";

const posts = (await getCollection("blog")).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body>
        <Header title={SITE_TITLE} />
        <main class="pt-[56px]">
            <Masthead />
            <Content>
                <section>
                    <p class="mb-8 indent-4">
                        Lorem ipsum dolor sit amet consectetur adipisicing elit.
                        Soluta sed harum nesciunt. Nisi, consequatur minima a
                        quidem rerum fuga voluptas asperiores porro mollitia rem
                        commodi ipsa accusamus eius debitis impedit!
                        <a
                            class="inline-flex items-center gap-1 indent-1 text-orange-500"
                            href="dimastri.com"
                        >
                            Learn more about me
                        </a>
                    </p>
                </section>
                <section>
                    <ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        {
                            posts.map((post) => {
                                const heroImage = post.data.heroImage;
                                return (
                                    <li class="text-center mb-4">
                                        <a href={`/blog/${post.id}/`}>
                                            {post.data.heroImage && (
                                                <Image
                                                    class="border border-slate-300 dark:border-zinc-700 rounded-xl"
                                                    width={720}
                                                    height={360}
                                                    src={post.data.heroImage}
                                                    alt="Thumbnail"
                                                />
                                            )}
                                            <h4 class="mt-3 text-xl font-bold">
                                                {post.data.title}
                                            </h4>
                                            <p class="date opacity-70">
                                                <FormattedDate
                                                    date={post.data.pubDate}
                                                />
                                            </p>
                                        </a>
                                    </li>
                                );
                            })
                        }
                    </ul>
                </section>
            </Content>
        </main>
        <Footer />
    </body>
</html>
