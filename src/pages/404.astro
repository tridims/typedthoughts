---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Content from "../components/Content.astro";
import { IoArrowForward, IoChevronForward } from "react-icons/io5";
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body
        class="bg-mainlight text-maindark dark:bg-maindark dark:text-mainlight break-words leading-6 transition-colors duration-500"
    >
        <Header title={SITE_TITLE} />
        <main class="pt-[56px]">
            <Content>
                <section>
                    <h1 class="text-3xl text-center font-title mt-12 mb-8">
                        Oops, not found
                    </h1>
                    <div class="text-center py-4">
                        <a
                            class="inline-flex items-center gap-1 underline underline-offset-2 decoration-indigo-500"
                            href="/"
                            >Go to Index <IoChevronForward />
                        </a>
                    </div>
                </section>
            </Content>
        </main>
        <Footer />
    </body>
</html>
