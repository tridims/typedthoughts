---
import Greeting from "./react/Greeting";

const isProd = import.meta.env.PROD;
const baseAssetUrl = "";
---

<section class="relative mb-6 h-80 flex justify-center items-center">
    <div class="absolute w-full h-full overflow-hidden">
        <video
            class="absolute inset-0 min-w-full min-h-full object-cover opacity-30"
            poster="/masthead-poster.jpg"
            autoplay="autoplay"
            muted="muted"
            loop="loop"
            playsinline
        >
            <source
                src={baseAssetUrl + "/masthead_1.mp4"}
                type="video/mp4; codecs=avc1.42E01E"
            />
        </video>
    </div>
    <Greeting client:load />
</section>
